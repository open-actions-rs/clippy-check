{
    "name": "rust-clippy-check",
    "version": "1.0.7",
    "private": false,
    "description": "Run clippy and annotate the diff with errors and warnings",
    "main": "dist/index.js",
    "scripts": {
        "build": "ncc build src/main.ts --minify",
        "watch": "ncc build src/main.ts --watch --minify",
        "deps:ci": "depcruise --output-type err src",
        "test": "jest --passWithNoTests",
        "lint": "eslint src --ext=ts,tsx",
        "lint:fix": "npm run test:lint -- --fix"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/actions-rs-plus/clippy-check.git"
    },
    "keywords": [
        "actions",
        "rust",
        "cargo"
    ],
    "author": "actions-rs",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/actions-rs-plus/clippy-check/issues"
    },
    "devDependencies": {
        "@actions-rs/core": "^0.1.6",
        "@actions/core": "^1.8.2",
        "@actions/github": "^5.0.3",
        "@types/jest": "^27.5.1",
        "@types/node": "^16.11.36",
        "@typescript-eslint/eslint-plugin": "^5.26.0",
        "@typescript-eslint/parser": "^5.26.0",
        "@vercel/ncc": "^0.33.4",
        "dependency-cruiser": "^11.7.1",
        "eslint": "^8.16.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-import-resolver-typescript": "^2.7.1",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-prettier": "^4.0.0",
        "husky": "^8.0.1",
        "jest": "^28.1.0",
        "jest-circus": "^28.1.0",
        "jest-junit": "^13.2.0",
        "lint-staged": "^12.4.2",
        "prettier": "^2.6.2",
        "string-argv": "^0.3.1",
        "ts-jest": "^28.0.2",
        "typescript": "^4.6.4"
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "npm run test:lint:fix",
            "depcruise --validate -- "
        ]
    }
}
